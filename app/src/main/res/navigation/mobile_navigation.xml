<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.split.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_tag"
        android:name="com.example.split.ui.tags.TagFragment"
        android:label="@string/title_tag"
        tools:layout="@layout/fragment_tag" />

    <fragment
        android:id="@+id/navigation_friend"
        android:name="com.example.split.ui.friend.FriendFragment"
        android:label="@string/title_friends"
        tools:layout="@layout/fragment_friend" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.split.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

</navigation>