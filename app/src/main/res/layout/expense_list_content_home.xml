<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/expense_description_home_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/Jost"
            android:maxEms="8"
            android:maxLines="2"
            android:text="this is a super lon gdescription and blabla"
            android:textSize="20sp" />

        <include
            layout="@layout/tag_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/expense_date_home_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/Jost"
            android:gravity="end"
            android:maxLines="1"
            android:text="Dec 20 2022 at 19:55" />

        <TextView
            android:id="@+id/expense_status_home_TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|end"
            android:fontFamily="@font/Jost"
            android:gravity="bottom"
            android:text="You borrowed $17"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>